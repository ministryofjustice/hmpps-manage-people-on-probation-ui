{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "inlineSources": true,
    "ignoreDeprecations": "5.0",
    "sourceRoot": "/",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "jest-resolver.js",
    "jest.config.js",
    "assets/**/*.js",
    "integration_tests",
    "e2e_tests",
    "dist",
    "cypress.config.ts",
    "playwright.config.ts",
    "playwright-report",
    "test-results",
    "eslint.config.mjs",
    "coverage",
    "**/*.cy.ts",
    "test_results",
    "codecov_reports",
    "packages"
  ],
  "include": ["**/*.js", "**/*.ts"]
}
