{% extends "../partials/layout.njk" %}
{% set title = 'Staff contacts' %}
{% if isSentenceJourney %}
  {% set pageTitle = makePageTitle({
    pageHeading: ["Staff contacts", "Probation history", "Sentence"]
  }) %}
{% else %}
  {% set pageTitle = makePageTitle({
    pageHeading: ["Staff contacts", "Personal details"]
  }) %}
{% endif %}

{% block beforeContent %}
  {% set breadcrumbItems = [
   {
      text: "Cases",
      href: "/case"
    },
    {
      text: headerPersonName.forename + ' ' + headerPersonName.surname,
      href: "/case/" + crn,
      attributes: { "data-ai-id": "breadcrumbPersonNameLink" }
    }
] %}
  {% if isSentenceJourney %}
    {% set breadcrumbItems = (breadcrumbItems.push({
    text: "Sentence",
    href: "/case/" + crn + "/sentence"
  },
   {
      text: "Probation history",
      href: "/case/" + crn + "/sentence/probation-history"
   }
  ), breadcrumbItems) %}
  {% else %}
    {% set breadcrumbItems = (breadcrumbItems.push({
      text: "Personal details",
      href: "/case/" + crn + "/personal-details"
    }
  ), breadcrumbItems) %}
  {% endif %}
  {% set breadcrumbItems = (breadcrumbItems.push({text: "Staff contacts"}), breadcrumbItems) %}
  {{ govukBreadcrumbs({
  items: breadcrumbItems
}) }}
{% endblock %}

{% block content %}
  {% if not hidePageHeader %}
    {% include "../partials/pop-header.njk" %}
    <hr class="govuk-section-break--l">
  {% endif %}
  <h2 class="govuk-heading-l" data-qa="pageHeading">{{ title }}</h2>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if currentContacts.length %}
        <section data-qa="currentContacts">
          <h3 class="govuk-heading-m">Current contacts</h3>
          {% for contact in currentContacts %}
            {% set contactName = "Unallocated " + contact | roleDescription if (contact.unallocated) else contact.name %}
            <div class="govuk-!-margin-bottom-0">
              <h4 class="govuk-heading-s">{{ contactName }}</h4>
              {{ govukSummaryList({
              classes: 'govuk-summary-list--no-border',
              rows: [
                {
                  key: { text: "Role" },
                  value: { html: contact | roleDescription | toSentenceCase(['(POM)']) }
                },
                {
                  key: { text: "Phone number" },
                  value: { text: contact.telephoneNumber }
                } if contact.telephoneNumber,
                {
                  key: { text: "Email" },
                  value: { text: contact.email }
                } if contact.email,
                {
                  key: { text: "Provider" },
                  value: { text: contact.provider }
                },
                {
                  key: { text: "Probation Delivery Unit (PDU)" },
                  value: { text: contact.probationDeliveryUnit }
                },
                {
                  key: { text: "Team" },
                  value: { text: contact.team }
                },
                {
                  key: { text: "Date allocated" },
                  value: { text: contact.allocationDate | dateWithYear }
                } if contact.allocationDate
              ]
            }) }}
            </div>  
            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible govuk-!-margin-top-4 {% if loop.index == currentContacts.length %}govuk-!-margin-bottom-8{% endif %}">
          {% endfor %}
        </section>
      {% endif %}
      {% if previousContacts.length %}
        <section data-qa="previousContacts">
          <h3 class="govuk-heading-m" id="previous">Previous contacts</h3>
          {% set hr = joiner('<hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">') %}

          {% for contact in previousContacts %}
            {% set contactName = "Unallocated " + contact | roleDescription  if (contact.unallocated) else contact.name %}
            <div class="govuk-!-margin-bottom-0">
              <h4 class="govuk-heading-s">{{ contactName }}</h4>
              {{ govukSummaryList({
              classes: 'govuk-summary-list--no-border',
              rows: [
                {
                  key: { text: "Role" },
                  value: { html: contact | roleDescription | toSentenceCase(['(POM)']) }
                },
                {
                  key: { text: "Phone number" },
                  value: { text: contact.telephoneNumber }
                } if contact.telephoneNumber,
                {
                  key: { text: "Email" },
                  value: { text: contact.email }
                } if contact.email,
                {
                  key: { text: "Provider" },
                  value: { text: contact.provider }
                },
                {
                  key: { text: "Probation Delivery Unit (PDU)" },
                  value: { text: contact.probationDeliveryUnit }
                },
                {
                  key: { text: "Team" },
                  value: { text: contact.team }
                },
                {
                  key: { text: "Allocated until" },
                  value: { text: contact.allocatedUntil | dateWithYear },
                  classes: "xxxx"
                } if contact.allocatedUntil
              ]
            }) }}
            </div>
            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible govuk-!-margin-top-4">
          {% endfor %}
        </section>
      {% endif %}
    </div>
  </div>
{% endblock %}