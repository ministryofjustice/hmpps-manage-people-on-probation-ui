{% if showSentencePlan %}
    <section data-qa="plan">
        <h{{ scoresHeadingLevel | default('3') }} class="govuk-heading-m">Plan</h{{ scoresHeadingLevel | default('3') }}>
        <div class="text-secondary govuk-body govuk-!-margin-bottom-2 govuk-hint">
            {% if planLastUpdated %}
                <p class="govuk-body" data-qa="planLastUpdated">Last updated: {{ planLastUpdated | dateWithYear }}</p>
            {% endif %}
            <p class="govuk-body">
                <a href="{{ sentencePlanLink() }}/{{ crn }}/plan" target="_blank" rel="external noopener noreferrer">View the sentence plan (opens in new tab)</a>.</p>
        </div>
    </section>
{% endif %}