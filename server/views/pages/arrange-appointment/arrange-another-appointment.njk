{% extends "../_form.njk" %}
{% set title = "Arrange another appointment" %}
{% set notStandardForm = true %}
{% set anotherAppointment = true %}
{% set buttonText = "Arrange appointment" %}
{% if isInPast != true and isInPast != null %}
    {% set showCalendarInsetText = true %}
{% endif %}
{% block beforeContent %}{% endblock %}
{% block primary %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l" data-qa="pageHeading">{{ title }}</h1>
            <p class="govuk-body">Use the saved details of your recently created appointment to create a new one. You can amend any of the details.</p>
        </div>
    </div>
    {% include "./appointment-summary.njk" %}
{% endblock %}