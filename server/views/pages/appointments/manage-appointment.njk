{% extends "../../partials/layout.njk" %}
{% set appointment = personAppointment.appointment %}
{% set personSummary = personAppointment.personSummary %}
{% set notes = '' %}
{% set alert = '' %}
{% set documents = [] %}
{% if appointment.documents.length > 0 %}
  {% for document in appointment.documents %}
    {% set documents = (documents.push([
      {
        html: '<a href="#">' + document.name + '</a>'
      },
      {
        text: document.level if document.level else ""
      },
      {
        text: document.type if document.type else ""
      },
      {
        text: document.dateCreated | dateWithYear if document.dateCreated else "",
        format: "numeric",
        attributes: {
          "data-sort-value": document.dateCreated | dateToTimestamp
        } if document.dateCreated
      },
      {
        text: document.lastUpdated | dateWithYear if document.lastUpdated else "",
        format: "numeric",
        attributes: {
          "data-sort-value": document.lastUpdated | dateToTimestamp
        } if document.lastUpdated
      }
    ]), documents) %}
  {% endfor %}
{% endif %}

{% set notesStatus = 'Not started' %}
{% set outcomeStatus = 'Not started' %}
{% set outcomeTagColour = 'blue' %}
{% set notesTagColour = 'blue' %}
{# {% set hasNote = appointment.appointmentNote and appointment.hasOutcome == false %} #}
{% set hasNotes = appointment.appointmentNotes.length > 0 %}
{% if appointment.hasOutcome and appointment.didTheyComply == true %}
  {% set outcomeStatus = 'Complied' %}
  {% set outcomeStatusColour = 'grey' %}
{% endif %}
{# {% if appointment.hasOutcome and appointment.acceptableAbsence == false %}
  {% set outcomeStatus = 'Unacceptable absence' %}
  {% set outcomeTagColour = 'red' %}
{% endif %}
{% if appointment.hasOutcome and appointment.acceptableAbsence == true %}
  {% set outcomeStatus = 'Acceptable absence' %}
  {% set outcomeTagColour = 'red' %}
{% endif %} #}
{% if not appointment.hasOutcome and not hasNotes %}
  {% if appointment.hasOutcome and hasNotes %}
    {% set notesStatus = 'Completed' %}
    {% set notesTagColour = '' %}
  {% endif %}
  {% set alert = "You must log an outcome and should add notes to this appointment." %}
{% endif %}
{% if appointment.hasOutcome and not hasNotes %}
  {% set alert = "You should add notes to this appointment." %}
{% endif %}
{% if not appointment.hasOutcome and hasNotes %}
  {% set alert = "You must log an outcome for this appointment." %}
  {% set notesStatus = 'In progress' %}
  {% set notesTagColour = 'yellow' %}
{% endif %}
{% if hasNotes %}
  {% for appointmentNote in appointment.appointmentNotes %}
    {% if appointmentNote.note %}
      {% set notes = notes.concat(appointmentNote.note) %}
    {% endif %}
  {% endfor %}
{% endif %}
{% block content %}
  {% if not hidePageHeader %}
    {% include "../../partials/pop-header.njk" %}
    <hr class="govuk-section-break--l">
  {% endif %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-l govuk-!-margin-bottom-6" data-qa="pageHeading">Manage {{ appointment.type }} with {{ appointment.officerName | fullName }}</h2>
      {% if alert %}
        {{ mojAlert({
  variant: "information",
  showTitleAsHeading: true,
  dismissible: false,
  text: alert
}) }}
      {% endif %}
      <section data-qa="appointmentActions">
        <h3 class="govuk-heading-m">Appointment actions</h3>
        {{ govukInsetText({
  html: 'You must <a href="" target="_blank" rel="noopener noreferrer">use NDelius to log non-attendance or non-compliance (opens in new tab)</a>.'
}) }}
        {{ govukTaskList({
  idPrefix: "company-details",
  items: [
    {
      title: {
        text: "Log attended and complied appointment"
      },
       hint: {
        text: "You cannot log an attended and complied outcome until the appointment has happened."
      } if not appointment.isInPast,
      href: "#" if appointment.isInPast and not appointment.hasOutcome,
      status: {
        tag: {
          text: outcomeStatus,
          classes: "govuk-tag--" + outcomeTagColour
        }
      }
    },
    {
      title: {
        text: "Add appointment notes"
      },
      href: "#",
      status: {
        tag: {
          text: notesStatus,
          classes: "govuk-tag--" + notesTagColour
        } if not hasNotes or (hasNotes and not appointment.hasOutcome),
        text: 'Completed' if hasNotes and appointment.hasOutcome
      } 
    },
    {
      title: {
        text: "Arrange next appointment"
      },
      hint: {
        text: appointment.type + " arranged with " + personSummary.name.forename + " at " + nextAppointment.location.officeName + " on " + nextAppointment.startDateTime | dateWithYear + "." if nextAppointment else "You do not have any other appointments arranged with " + personSummary.name.forename + "."
      },
      href: "#" if not nextAppointment,
      status: {
        tag: {
          text: "Not started",
          classes: "govuk-tag--blue"
        } if not nextAppointment,
        text: 'Completed' if nextAppointment
      }
    }
    ]
}) }}
      </section>
      <section data-qa="appointmentDetails">
        <h3 class="govuk-heading-m">Appointment details</h3>
        <p class="govuk-body">All links to change appointment details on NDelius open in a new tab.</p>
        {{ govukSummaryList({
  rows: [
    {
      key: {
        text: "Date and time"
      },
      value: {
        text: appointment.startDateTime | dateWithYear + ' at ' + appointment.startDateTime | govukTime + (' to ' + appointment.endDateTime | govukTime if appointment.endDateTime else '')
      },
      actions: {
        items: [
          {
            href: "#",
            text: "Change on NDelius",
            visuallyHiddenText: "(opens in new tab)"
          }
        ]
      }
    },
    {
      key: {
        text: "Location"
      },
      value: {
        html: '<span data-qa="locationValue">' + addressToList(appointment.location).join('<br>') | safe + '</span>' 
      },
      actions: {
        items: [
          {
            href: "#",
            text: "Change on NDelius",
            visuallyHiddenText: "(opens in new tab)"
          }
        ]
      }
    } if appointment.location,
    {
      key: {
        text: "Attending"
      },
      value: {
        text: appointment.officerName | fullName
      },
      actions: {
        items: [
          {
            href: "#",
            text: "Change on NDelius",
            visuallyHiddenText: "(opens in new tab)"
          }
        ]
      }
    },
    {
      key: {
        text: "RAR activity"
      },
      value: {
        text: appointment.rarCategory if appointment.rarCategory else 'Not provided'
      },
      actions: {
        items: [
          {
            href: "#",
            text: "Change on NDelius",
            visuallyHiddenText: "(opens in new tab)"
          }
        ]
      }
    } if appointment.isRarRelated,
    {
      key: {
        text: "VISOR report"
      },
      value: {
        text: 'No'
      },
      actions: {
        items: [
          {
            href: "#",
            text: "Change",
            visuallyHiddenText: ""
          }
        ]
      }
    },
    {
      key: {
        text: "Appointment notes"
      },
     value: { html: '<span data-qa="notesValue">' + notes + '</span>' if notes else 'No notes' },
      actions: {
        items: [
          {
            href: "#",
            text: "Add to notes" if hasNotes else "Change",
            visuallyHiddenText: ""
          }
        ]
      }
    },
    {
      key: {
        text: "Sensitive"
      },
      value: {
        text: 'Yes' if appointment.isSensitive else 'No'
      },
      actions: {
        items: [
          {
            href: "#",
            text: "Change",
            visuallyHiddenText: ""
          }
        ]
      }
    }
  ]
}) }}
      </section>
      {% if appointment.documents.length > 0 %}
        <section data-qa="associationDocuments">
          <h3 class="govuk-heading-m">Associated documents</h3>
          <p class="govuk-body">Documents associated with this appointment</p>
          {{ govukTable({
  attributes: {
    "data-module": "moj-sortable-table"
  },
  head: [
    {
      text: "Name",
      attributes: {
        "aria-sort": "ascending"
      }
    },
    {
      text: "Level",
      attributes: {
        "aria-sort": "none"
      }
    },
    {
      text: "Type",
      attributes: {
        "aria-sort": "none"
      }
    },
    {
      text: "Date created",
      attributes: {
        "aria-sort": "none"
      },
      format: "numeric"
    },
    {
      text: "Date modified",
      attributes: {
        "aria-sort": "none"
      },
      format: "numeric"
    }
  ],
  rows: documents
}) }}
          {{ appointment.documents.length }}
        </section>
      {% endif %}
      <p class="govuk-body-s">Last updated by {{ appointment.lastUpdatedBy | fullName }} on {{  appointment.lastUpdated | dateWithYear }}</p>
    </div>
  </div>
{% endblock %}