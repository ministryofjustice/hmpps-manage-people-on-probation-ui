{% extends "../partials/layout.njk" %}
{% from "../_components/predictor-timeline-item/macro.njk" import predictorTimelineItem %}
{% block beforeContent %}
  {{ govukBackLink({
    href: backLink + ("?change=" + change if change else '')
  }) }}
{% endblock %}

{% block content %}
  {% include "../partials/pop-header.njk" %}
  <hr class="govuk-section-break--l">
  {% if notStandardForm %}
    {% block primary %}{% endblock %}
  {% else %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        {% block heading %}
          <h2 class="govuk-heading-l govuk-!-margin-bottom-6" data-qa="pageHeading">
            {{ title }}
          </h2>
        {% endblock %}
        <form method="post" autocomplete="off" action="{{ action if action else paths.current }}">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}">
          {% block form %}{% endblock %}
          {{ govukButton({
            html: buttonText if buttonText else 'Continue',
            isStartButton: buttonText === 'Start now',
            attributes: {
              'data-qa': 'submit-btn'
            }
          }) }}
        </form>
      </div>
    </div>
  {% endif %}
{% endblock %}