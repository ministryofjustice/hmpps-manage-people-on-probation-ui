{% extends "../_form.njk" %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set backLink = back if back else 
  '/case/' + crn + '/appointments/' + checkIn.uuid + '/check-in/view' %}
{% set hideButton = true %}

{% set title = "Check in video" %}

{% block form %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="videoRecorder__videoWrap">
        <video class="videoRecorder__video-preview" src="{{ checkIn.videoUrl }}" controls crossorigin>
          Your browser does not support video
        </video>
      </div>
      <div class="govuk-button-group govuk-!-margin-top-5">
        <a
          class="govuk-button"
          data-module="govuk-button"
          role="button"
          data-qa="submit-btn"
          href="{{ backLink }}"
          >Back to check in</a
        >
      </div>
    </div>
  </div>
{% endblock %}