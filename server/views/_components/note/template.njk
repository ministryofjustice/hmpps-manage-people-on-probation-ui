<div class="app-note">
    <p class="govuk-body govuk-!-margin-bottom-1">
        <span class="line-break">{{ displayNoteContent }}</span>
        {% if note.hasNoteBeenTruncated === true or needsLink === true %}... <a href="{{ href }}">View full note</a>
        {% endif %}
    </p>
    <p class="govuk-body-s secondary-text app-note__author">
        Comment added by {% if note.createdBy %}{{ note.createdBy }} on {{ note.createdByDate | dateWithYear }}
        {% else %}not entered{% endif %}
    </p>
</div>
