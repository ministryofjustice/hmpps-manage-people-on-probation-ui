    "@sentry/node": "^10.10.0",
    "@types/cypress__code-coverage": "^3.10.2",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.5",
    "assert": "^2.1.0",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "9.0.0",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-prom-bundle": "^8.0.0",
    "express-session": "^1.18.1",
    "glob": "^11.0.3",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^5.11.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "lcov-result-merger": "^5.0.1",
    "lodash": "^4.17.21",
    "luxon": "^3.7.2",
    "luxon-business-days": "^3.0.1",
    "multer": "^2.0.2",
    "nocache": "^4.0.0",
    "node-mocks-http": "^1.17.2",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "postcode-validator": "^3.10.5",
